<?xml version="1.0" encoding="utf-8"?>
<OpcUaModbusGateway Name="OpcUaModbusGateway" xmlns="http://ASNeG/OpcUaModbusGateway.xsd">

  <ModbusTCPClient Name="PythonModbusServer">
      <IPAddress>127.0.0.1</IPAddress>
      <Port>5502</Port>
      <SlaveId>0</SlaveId>
    
      <ConnectTimeout>1000</ConnectTimeout>
      <ReconnectTimeout>5000</ReconnectTimeout>
      <SendTimeout>1000</SendTimeout>
      <RecvTimeout>3000</RecvTimeout>
      <QueryTimeout>3000</QueryTimeout>
    
      <RegisterGroup Group="Coil" GroupName="Name1" Interval="1000">
          <Register Address="0" Name="Val1"/>
          <Register Address="1" Name="Val2"/>
      </RegisterGroup>
      <RegisterGroup Group="Coil" GroupName="Name2" Interval="1000">
          <Register Address="0" Name="Val1"/>
          <Register Address="1" Name="Val2"/>
      </RegisterGroup>
      <RegisterGroup Group="Input" GroupName="Name3" Interval="1000">
          <Register Address="0" Name="Val1"/>
          <Register Address="1" Name="Val2"/>
      </RegisterGroup>
      <RegisterGroup Group="HoldingRegister" GroupName="Name4" Interval="1000">
          <Register Address="0" Name="Val1" Unit="V" Type="FLOAT" A="0" B="1"/>
          <Register Address="1" Name="Val2" Unit="A" Type="FLOAT" A="0" B="1"/>
      </RegisterGroup>
      <RegisterGroup Group="InputRegister" GroupName="Name5" Interval="1000">
          <Register Address="0" Name="Val1" Unit="X" Type="UINT16"/>
          <Register Address="1" Name="Val2" Unit="Y" Type="FLOAT" A="0" B="1"/>
      </RegisterGroup>
     <RegisterGroup Group="InputRegister" GroupName="Name6" Interval="1000">
          <Register Address="10" Name="Val1" Unit="X" Type="UINT16"/>
          <Register Address="11" Name="Val2" Unit="Y" Type="FLOAT" A="0" B="1"/>
      </RegisterGroup>

  </ModbusTCPClient>

