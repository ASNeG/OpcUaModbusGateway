<?xml version="1.0" encoding="utf-8"?>
<OpcUaModbusGateway Name="OpcUaModbusGateway" xmlns="http://ASNeG/OpcUaModbusGateway.xsd">

  <ModbusTCPClient Name="PythonModbusServer">
      <IPAddress>127.0.0.1</IPAddress>
      <Port>5502</Port>
      <SlaveId>0</SlaveId>
    
      <ConnectTimeout>1000</ConnectTimeout>
      <ReconnectTimeout>5000</ReconnectTimeout>
      <SendTimeout>1000</SendTimeout>
      <RecvTimeout>3000</RecvTimeout>
      <QueryTimeout>3000</QueryTimeout>
    
      <Coils Name="Name1" Interval="1000">
          <Coil Address="0" Name="Val1"/>
          <Coil Address="1" Name="Val1"/>
      </Coils>
      <Inputs Name="Name1" Interval="1000">
          <Input Address="0" Name="Val1"/>
          <Input Address="1" Name="Val1"/>
      </Inputs>
      <HoldingRegisters Name="Name1" Interval="1000">
          <HoldingRegister Address="0" Name="Val1" Unit="V" Type="FLOAT" A="0" B="1"/>
          <HoldingRegister Address="1" Name="Val2" Unit="A" Type="FLOAT" A="0" B="1"/>
      </HoldingRegisters>
      <InputRegisters Name="Name1" Interval="1000">
          <InputRegister Address="0" Name="Val1" Unit="X" Type="UINT16"/>
          <InputRegister Address="0" Name="Val1" Unit="Y" Type="FLOAT" A="0" B="1"/>
      </InputRegisters>

  </ModbusTCPClient>

